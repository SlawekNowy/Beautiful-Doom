Class BD_DeadBody : Actor abstract {
	override void PostBeginPlay() {
		super.PostBeginPlay();
		scale.x *= randompick(-1,1);
		if (!bdoom_blood)
			return;
		let a = BD_AniBloodPool(Spawn("BD_AniBloodPool",(pos.x,pos.y,floorz),ALLOW_REPLACE));
		if (a) { 
			a.instant = true;
			a.target = self;
		}
	}
}

